{
	"compilerOptions": {
		"resolveJsonModule": true,
		"module": "commonjs",
		"moduleResolution": "node",
		"target": "ES2022",
		"lib": ["ES2022", "DOM"],
		"noEmit": true,
		// be explicit about types included
		// to avoid clashing with Jest types
		"types": ["node", "cypress", "@testing-library/cypress"],
		"esModuleInterop": true,
		"strict": true,
		"skipLibCheck": true,
		"paths": {
			"@/*": ["../src/*"]
		}
	},
	"include": ["**/*.ts", "../cypress.config.ts"],
	"exclude": []
}
