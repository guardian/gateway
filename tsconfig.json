{
	"compilerOptions": {
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"jsx": "react",
		"module": "commonjs",
		"noUnusedLocals": true,
		"outDir": "build",
		"strict": true,
		"target": "ES2022",
		"types": ["@emotion/react", "jest", "@testing-library/jest-dom"],
		"baseUrl": "src",
		"paths": {
			"@/*": ["*"],
			"react": ["./node_modules/preact/compat/"],
			"react-dom": ["./node_modules/preact/compat/"]
		},
		"lib": ["ES2022", "DOM"],
		"importHelpers": true,
		"allowJs": true
	},
	"include": [
		"src",
		".storybook/*",
		"__mocks__/*",
		"util/*",
		"scripts/*.js",
		"scripts/generate-rate-limit-schema.ts",
		"knip.ts",
		".swcrc.config.js",
		"babel.config.js",
		"jest.config.js",
		"webpack.config.js",
		"webpack.development.js"
	]
}
