{
	"compilerOptions": {
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"jsx": "react",
		"module": "commonjs",
		"noUnusedLocals": true,
		"outDir": "build",
		"strict": true,
		"target": "ES2022",
		"types": ["@emotion/react", "jest", "@testing-library/jest-dom"],
		"baseUrl": "src",
		"paths": {
			"@/*": ["*"],
			"react": ["./node_modules/preact/compat/"],
			"react-dom": ["./node_modules/preact/compat/"]
		},
		"lib": ["ES2022", "DOM"],
		"importHelpers": true
	},
	"include": ["src", "scripts/generate-rate-limit-schema.ts", "knip.ts"]
}
